/* miniprogram/pages/user/user.wxss */

.block--180 {
  width: 100%;
  height: 350rpx;
  background-color: #0c7;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.block--menu {
  margin-top: 140rpx;
  width: 100%;
  background-color: #fff;
}

.nickname {
  font-size: 56rpx;
  color: #fff;
  font-weight: 400;
  padding-left: 40rpx;
}

.user-image {
  padding-right: 40rpx;
}

.menu-float {
  position: absolute;
  height: 140rpx;
  background: white;
  bottom: -100rpx;
  left: 40rpx;
  right: 40rpx;
  border-radius: 8rpx;
  display: flex;
  /* justify-content: center; */
  align-items: center;
}

.menu-item {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  height: 100%;
  line-height: 140rpx;
  color: #0c7;
  /* background-color: white; */
}

.menu-item:hover {
  border-radius: 4px;
  background-color: #f1f1f1;
}

.menu-item--text {
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #717171;
}

.list--menu--item {
  background-color: #fff !important;
}

.list--menu--item:hover {
  background-color: #f1f1f1 !important;
}

.foot {
  color: #8799a3;
  margin-top: 100rpx;
}

button {
  background-color: transparent;
  padding: 0rpx;
  margin: 0rpx;
  display: inline-block;
  line-height: 1;
}

button::after {
  /*button的边框样式是通过::after方式实现的*/
  border: none;
}

.button-hover {
  /*点击后样式*/
  color: #000;
  background-color: transparent;
}

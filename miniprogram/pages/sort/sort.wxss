/* pages/sort/sort.wxss */

.VerticalNav.nav {
  width: 200rpx;
  white-space: initial;
}

.text {
  line-height: 1.5;
  padding-left: 15px;
  text-align: justify;
  text-indent: 30px;
  font-size: 15px;
  font-family: 宋体;
  font-weight: 800;
}

.attention {
  line-height: 1.5;
  padding-left: 15px;
  padding-top: 10px;
  text-align: justify;
  text-indent: 30px;
  font-size: 15px;
  font-weight: 800;
}

.VerticalNav.nav .cu-item {
  width: 100%;
  text-align: center;
  background-color: #fff;
  margin: 0;
  border: none;
  height: 50px;
  position: relative;
}

.VerticalNav.nav .cu-item.cur {
  background-color: #f1f1f1;
}

.VerticalNav.nav .cu-item.cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: currentColor;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}

.VerticalBox {
  display: flex;
}

.VerticalMain {
  background-color: #f1f1f1;
}
